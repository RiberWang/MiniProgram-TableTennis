@import "movie-list/movie-list-template.wxss";
@import "movie-grid/movie-grid-template.wxss";

.container {
  background-color: #f2f2f2;
}

.movies-template {
  margin-bottom: 30rpx;
}

.search {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  background-color: #f2f2f2;
}

.search-img {
  margin: auto 0 auto 20rpx;
}

.search input {
  height: 100%;
  width: 600rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
}

.placehoder {
  font-size: 14rpx;
  margin-left: 20rpx;
  color: lightgray;
}

.search-panel {
  position: absolute;
  top: 80rpx;
}

.cancel-img {
  width: 30rpx;
  height: 30rpx;
  margin: auto 0 auto 10rpx;
}