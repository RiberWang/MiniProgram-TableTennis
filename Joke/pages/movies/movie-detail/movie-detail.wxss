/* pages/movies/movie-detail/movie-detail.wxss */
@import "../stars/star-template.wxss";

.container {
  display: flex;
  flex-direction: column;
}

.head-img {
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(20px);
}

.head-img-hover {
  width: 100%;
  height: 320rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
}

.main-title {
  font-size: 19px;
  color: #fff;
  font-weight: bold;
  letter-spacing: 2px;
  margin-top: 60rpx;
  margin-left: 40rpx;
}

.sub-title {
  font-size: 28rpx;
  color: #fff;
  margin-left: 40rpx;
  margin-top: 30rpx;
}

.like {
  display: flex;
  flex-direction: row;
  margin-left: 40rpx;
  margin-top: 30rpx;
}

.movie-img {
  width: 175rpx;
  height: 238rpx;
  position: absolute;
  top: 160rpx;
  right: 30rpx;
}

.like {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.highlight-font {
  color: #f21146;
  font-size: 22rpx;
  margin-right: 10rpx; 
}

.plain-font {
  color: #666;
  margin-right: 30rpx; 
  font-size: 22rpx;
}

.summary {
  color: #777777;
  margin-left: 40rpx;
  margin-right: 20rpx;
  margin-top: 40rpx;
}

.original-title {
  color: #1f3463;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}

.mark {
  margin-right: 30rpx;
  color: #999999;
  white-space: nowrap; /* 不换行 */
}

.hr {
  margin-top: 45rpx;
  width: 100%;
  height: 1px;
  background-color: #d9d9d9;
}

.introduction {
  margin-left: 40rpx;
  margin-right: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}

.summary-content {
  margin: 20rpx auto 40rpx;
  letter-spacing: 1px;
  line-height: 40rpx;
}

.cast {
  margin-left: 40rpx;
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
}

.cast-font {
  color: #999;
  margin-bottom: 40rpx;
}

.cast-container {
  display: inline-flex;
  flex-direction: column;
  margin-right: 40rpx;
  margin-bottom: 50rpx;
  width: 170rpx;
  text-align: center;
  white-space: normal; 
}

.cast-scroll {
  white-space: nowrap;
}

.cast-img {
  width: 170rpx;
  height: 210rpx;
}

.cast-name {
  margin: 10rpx auto 0;
  word-break: break-all;
}