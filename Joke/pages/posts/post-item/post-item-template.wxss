
.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.author-bg {
  /* margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 10rpx; */
  margin: 10rpx 0 20rpx 10rpx;
}

.author-avatar {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.author-date {
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}

.content-title {
  font-size: 34rpx;
  font-weight: 600rpx;
  color: #333;
  margin-left: 10px;
  margin-bottom: 10px;
}

.content-image {
  margin-left: 10rpx;
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}

.content-text {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  line-height: 40rpx;
}

.post-like {
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}

.post-like-image {
  width: 16px;
  height: 16px;
  vertical-align: middle;
  margin-left: 16px;
}

.post-like-count {
  vertical-align: middle;
  margin-left: 5px;
}